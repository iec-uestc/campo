- @page_title = t '.invitation'

.main
  .container
    .row
      .col-md-8.invitation_body
        .panel
          .panel-body.invitation_heading
            = icon 'hand-o-up', class: 'pull-right'
            p.pull-right.tips = t '.click_to_share'
            p Tsemple
            p
              = t '.invitation_from'
              a< href="#{user_root_url(@invitation.inviter.username)}" ="@#{@invitation.inviter.username}"
            .invitation_info_area
              p = t '.your_invitation_is'
              .invitation_box.text-center
                p.label.label-info = @invitation_code
              p = t '.click_to_signup'
              .signup_with_invitations
                a.btn.btn-success.btn-block href="#{signup_url}?invitation_code=#{@invitation.code}" = t '.signup_now'
